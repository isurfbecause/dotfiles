# Resize Floating Windows
bindomuse button1 resize

# move floating windows with keys
set $float_moving_px 100px
bindsym $super+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym Left  move left $float_moving_px
    bindsym Down  move down $float_moving_px
    bindsym Up    move up $float_moving_px
    bindsym Right move right $float_moving_px

    bindsym h     move left $float_moving_px
    bindsym j     move down $float_moving_px
    bindsym k     move up $float_moving_px
    bindsym l     move right $float_moving_px

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $super+m mode "default"
}

