yabai -m config layout bsp

yabai -m config window_placement second_child

#padding
yabai -m config top_padding 25
yabai -m config bottom_padding 0
yabai -m config left_padding 0
yabai -m config right_padding 0
yabai -m config window_ gap 0

yabai -m config mouse_follows_focus          on

# On mouse hover will make window active
yabai -m config focus_follows_mouse          autofocus

yabai -m config mouse_modifier alt
# left click + drag
yabai -m config mouse_action1 move
# right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

# floating windows are always on top (default: off)
yabai -m config window_topmost on

# Will not work with SIP
# window opacity (default: off)

#Disable specfic swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app=" Karabiner-Elements$" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="CleanShot X" manage=off
yabai -m rule --add app="Roam Research" manage=off
yabai -m rule --add app="Akko Cloud Driver" manage=off
yabai -m rule --add app="Messages" manage=off
yabai -m rule --add app="1Password" manage=off
yabai -m rule --add app="Superhuman" manage=off
yabai -m rule --add app="Preview" manage=off
