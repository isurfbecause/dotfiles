
get_current_branch() {
     #git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
    git branch | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'
}

# Easier navigation: .., ..., ~ and -
alias ..="cd .."

alias ls="ls --color"
alias ll="ls -laht --color"

alias pip="pip3"
alias python="python3"

# Change Directories
alias p="cd ~/projects"
alias dl="cd ~/Downloads"

#alias
alias srczsh='source ~/.zshrc'
alias zshedit='vim ~/.zshrc'
alias hl='history | less'

#git
alias gsl='git log -p -1'
alias gom='git checkout main'
alias gd='git diff --color | diff-so-fancy | less -R'
#last branch
alias glb='git checkout @{-1}'
#order by branches most used
alias gbl="git for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'"
alias gb="git branch"
alias gs='git status'
alias grh='git reset --hard'
#remove branches that have already been merged into master
alias gcleanbranches='git branch --merged main | grep -v "\* master" | xargs -n 1 git branch -d; git remote prune origin;'
#remove files that are not tracked by git
alias gdf='git clean -df'
alias gpm='git pull origin master'
alias gco='git checkout $(git branch | fzf)'
alias ga='git ls-files -m -o --exclude-standard | fzf -m --print0 | xargs -0 -o -t git add -p'

# nvim
export VISUAL=nvim
alias vim=nvim
alias vi=nvim
export VIMCONFIG=~/.config/nvim
export VIMDATA=~/.local/share/nvim

# Cheetsheet lookup
function cheetsheet() {
  curl cht.sh/$1 | less -R
}

alias cheatsh=cheetsheet

# Launch apps like a chromium app
alias discord='$HOME/bin/launch-discord.sh'
alias notion='$HOME/bin/launch-notion.sh'
alias gcal='$HOME/bin/launch-calendar.sh'
alias vpn='$HOME/Downloads/eng-scripts/vpn.sh'
alias lock='$HOME/bin/i3lock.sh'
alias lk=lock

#config dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias cfs='config status'
alias cfd='config diff | diff-so-fancy'
alias cfa='config add'
alias cfm='config commit -m'
alias cfp='config push'
# Add all modified dot files
alias cfaa='config ls-files -m | xargs echo config add'

# Github commandline
# Open Github repo in browser
alias ghv="gh repo view -w"

# Terraform
alias tf='terraform'
alias tfp='terraform plan'
alias tfa='terraform apply'

# CircleCI
alias cciv='circleci config validate'

# Newer version of grep
alias grep='ggrep'
